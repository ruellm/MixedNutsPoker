<Window x:Class="PokerClientDotNET.LogIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Log-in" Height="120" Width="261"
    WindowStartupLocation="CenterOwner"
    WindowStyle="ToolWindow" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*" />
            <ColumnDefinition Width="78*" />
            <ColumnDefinition Width="69*" />
            <ColumnDefinition Width="12*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*" />
            <RowDefinition Height="12*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <TextBox Name="_userName" Text="player" Grid.Column="1" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="2"/>
        <TextBox Text="Password" Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" Grid.ColumnSpan="2" IsEnabled="False"/>
        <Button Content="Log-in" Grid.Column="1" Grid.Row="2" Height="22" Click="Button_Click_1" Name="_logInBtn" IsDefault="True"/>
        <Button Content="Cancel" Grid.Column="2" Grid.Row="2" Height="22" Click="Button_Click" />
        <TextBlock Text="Name" />
        <TextBlock Text="Password" Grid.Row="1"/>
    </Grid>
</Window>
